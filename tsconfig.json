{
  "compilerOptions": {
    "target": "ES2020",                         // Современный стандарт JS
    "module": "ESNext",                         // Используем ES-модули (import/export)
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "esModuleInterop": true,                    // Для совместимости с CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,                  // Чтобы импортировать .json
    "outDir": "dist",                           // Куда будет собираться JS-код
    "rootDir": ".",                             // Откуда TypeScript начинает сборку
    "allowSyntheticDefaultImports": true
  },
  "include": ["backend", "server.ts"],
  "exclude": ["node_modules", "dist"]
}
